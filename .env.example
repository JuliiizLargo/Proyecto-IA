# Configuración de Google Generative AI
GOOGLE_API_KEY=tuApiKey

# Configuración de Tesseract OCR (opcional)
# Descomenta y configura solo si Tesseract no está en el PATH
# TESSERACT_CMD=C:/Program Files/Tesseract-OCR/tesseract.exe  # Windows
# TESSERACT_CMD=/usr/bin/tesseract  # Linux/Mac

# Configuración de persistencia de la base de datos vectorial
# Ruta donde se guarda/carga automáticamente el índice de embeddings
VECTOR_STORE_PATH=./data/vector_store.pkl

# Límite de tamaño de archivo (en MB)
MAX_FILE_SIZE_MB=20
